@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-1 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                Broker
            </div>
        </div>
        <div class="col-3 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                <select class="form-select form-select-lg" aria-label=".form-select-lg example" id="brokerSelector">
                    <option value="125.234.135.55" selected>PK2 - 125.234.135.55</option>
                    <option value="125.234.135.55">PK2 - 125.234.135.55</option>
                    <option value="125.234.135.55">PK2 - 125.234.135.55</option>
                </select>
            </div>
        </div>
        <div class="col-2 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary" type="button" id="b_connect">Connect</button>
            </div>
        </div>
        <div class="col-1 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary" type="button" id="b_pause">Pause</button>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary" type="button" id="b_clear">Clear Results</button>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-1 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                Topic
            </div>
        </div>
        <div class="col-3 d-flex justify-content-start align-items-center">
            <select id="topicSelector" multiple="multiple">
                <option value="/SysCtrl">SysCtrl</option>
                <option value="/Event/Cnt">Event Cnt</option>
                <option value="/Event/ComSew/Cnt">Event ComSew Cnt</option>
                <option value="/Event/Teaching">Event Teaching</option>
                <option value="/Event/Mchn_time">Event Mchn_time</option>
                <option value="/Event/Nfc/Uid">Event NFC UID</option>
                <option value="/Event/Handling">Event Handling</option>
            </select>
        </div>
        <div class="col-2 d-flex justify-content-start align-items-center">
            <div class="d-flex align-items-center">
                MAC Address
            </div>
        </div>
        <div class="col-4 d-flex justify-content-start align-items-center">
            <input type="text" class="form-control" placeholder="Mac Address" aria-label="Mac Address" aria-describedby="basic-addon1" id="macFilter">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-start">
        <div class="container mt-4 ml-4 mr-4 border border-top border start border-3 border-black">
            <table id="messageTable" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Message</th>
                        <th>Topic</th>
                        <th>Captured at</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
